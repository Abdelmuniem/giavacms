
<subsystem xmlns="urn:jboss:domain:datasources:1.0">
	<datasources>
		<datasource jndi-name="java:jboss/datasources/CmsTestDS"
			pool-name="CmsTestPoolDS" enabled="true" jta="true" use-java-context="true"
			use-ccm="true">
			<connection-url>
				jdbc:mysql://localhost:3306/cmstest
			</connection-url>
			<driver>
				mysql
			</driver>
			<security>
				<user-name>
					cmstest
				</user-name>
				<password>
					cmstest
				</password>
			</security>
		</datasource>
		<drivers>
			<driver name="mysql" module="com.mysql" />
		</drivers>
	</datasources>
</subsystem>
