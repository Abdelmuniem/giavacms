<?xml version="1.0" encoding="UTF-8"?>
<web-fragment xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-fragment_3_0.xsd"
	version="3.0">

<filter>
		<filter-name>ErrorsFilter</filter-name>
		<filter-class>it.coopservice.cas.CASWebAuthenticationFilter</filter-class>
		<init-param>
			<param-name>serverName</param-name>
			<param-value>http://localhost:8080</param-value>
		</init-param>
	</filter>
	<filter>
		<filter-name>CASLegacyAuthenticationFilter</filter-name>
		<filter-class>it.coopservice.cas.CASLegacyAuthenticationFilter</filter-class>
		<!-- filter-class>org.jasig.cas.client.authentication.AuthenticationFilter</filter-class -->
		<init-param>
			<param-name>casServerLoginUrl</param-name>
			<param-value>https://cas.coopservice.it/cas/login</param-value>
		</init-param>
		<init-param>
			<param-name>serverName</param-name>
			<param-value>http://localhost:8080</param-value>
		</init-param>
	</filter>
	<!-- Other filters as needed -->

	<!-- CAS client filter mappings -->
	<!-- The order of the following filters is vitally important -->
	<filter-mapping>
		<filter-name>CASWebAuthenticationFilter</filter-name>
		<url-pattern>*.jsf</url-pattern>
	</filter-mapping>
	
	<error-page>
		<exception-type>java.lang.NullPointerException</exception-type>
		<location>/errors/exception.html</location>
	</error-page>
	<error-page>
		<exception-type>java.lang.Exception</exception-type>
		<location>/errors/exception.html</location>
	</error-page>

	<error-page>
		<error-code>304</error-code>
		<location>/errors/304.html</location>
	</error-page>
	<error-page>
		<error-code>404</error-code>
		<location>/errors/404.html</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/errors/500.html</location>
	</error-page>

</web-fragment>